#!/bin/bash
# Pre-commit hook for Gartan Scraper Bot
# Runs tests, linting, and validation before allowing commits

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if we're in the right directory
if [ ! -f "run_bot.py" ]; then
    echo "âŒ Error: Not in project root directory"
    exit 1
fi

# Check Python syntax
echo "ğŸ Checking Python syntax..."
python -m py_compile *.py || {
    echo "âŒ Python syntax errors found"
    exit 1
}

# Auto-format with Black & isort (only changed/staged files to speed up)
echo "ğŸ§¹ Auto-formatting (black & isort)..."
if command -v black >/dev/null 2>&1; then
    black . >/dev/null 2>&1 || true
fi
if command -v isort >/dev/null 2>&1; then
    isort . >/dev/null 2>&1 || true
fi

# Re-stage any formatting changes
if [ -n "$(git diff --name-only --diff-filter=ACM)" ]; then
    git add .
fi

# Run core tests (fast feedback)
echo "ğŸ§ª Running core tests..."
python -m pytest tests/ -q || {
    echo "âŒ Tests failed"
    exit 1
}

# Pylint on staged Python files (excluding tests for speed initially)
echo "ğŸ” Running pylint on staged files..."
if command -v pylint >/dev/null 2>&1; then
    staged_py=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.py$' | grep -v '^tests/' || true)
    if [ -n "$staged_py" ]; then
        pylint --errors-only $staged_py || {
           echo "âŒ Pylint (errors-only) failed"
           exit 1
        }
    else
        echo "No staged Python files to lint"
    fi
else
    echo "Pylint not installed; skipping (install with 'pip install pylint' for local checks)"
fi

# Check for TODO/FIXME comments in staged files
echo "ğŸ“ Checking for TODO/FIXME comments..."
staged_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(py|md)$' || true)
if [ -n "$staged_files" ]; then
    todo_count=$(grep -n -i "TODO\|FIXME" $staged_files | wc -l || true)
    if [ "$todo_count" -gt 0 ]; then
        echo "âš ï¸  Warning: Found $todo_count TODO/FIXME comments in staged files"
        grep -n -i "TODO\|FIXME" $staged_files || true
        echo "Consider addressing these before committing"
    fi
fi

# Check that required files exist
echo "ğŸ“‚ Checking required files..."
required_files=("requirements.txt" "Dockerfile" "docker-compose.yml" ".env.example")
for file in "${required_files[@]}"; do
    if [ ! -f "$file" ]; then
        echo "âŒ Required file missing: $file"
        exit 1
    fi
done

# Validate database schema if database exists
if [ -f "gartan_availability.db" ]; then
    echo "ğŸ—„ï¸  Validating database schema..."
    python -c "
import sqlite3
conn = sqlite3.connect('gartan_availability.db')
cursor = conn.cursor()
# Check required tables exist
tables = ['crew', 'appliance', 'crew_availability', 'appliance_availability']
for table in tables:
    cursor.execute(\"SELECT name FROM sqlite_master WHERE type='table' AND name=?\", (table,))
    if not cursor.fetchone():
        print(f'âŒ Required table missing: {table}')
        exit(1)
print('âœ… Database schema validation passed')
conn.close()
" || {
        echo "âŒ Database schema validation failed"
        exit 1
    }
fi

echo "âœ… All pre-commit checks passed!"
