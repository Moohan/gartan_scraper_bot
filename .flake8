[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E704,  # multiple statements on one line (handled by black)
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    tests/fixtures/*
per-file-ignores =
    __init__.py:F401
max-complexity = 10
import-order-style = google
application-import-names = gartan_scraper
