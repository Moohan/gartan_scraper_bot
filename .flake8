[flake8]
max-line-length = 88
# Codes ignored because Black/formatting decisions supersede them
extend-ignore =
    E203
    E501
    W503
    E704
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    tests/fixtures/*
per-file-ignores =
    __init__.py:F401
max-complexity = 10
import-order-style = google
application-import-names = gartan_scraper
