# Gartan Scraper Bot Configuration
# Copy this file to .env and update with your actual values

# Required: Gartan system credentials
GARTAN_USERNAME=your_username_here
GARTAN_PASSWORD=your_password_here

# Required: Media directory for persistent files (database, cache, logs)
# Default: current directory (.)
MEDIA=/app/data

# Optional: Application configuration
LOG_LEVEL=INFO
MAX_WORKERS=4
CACHE_DURATION_MINUTES=15

# Optional: API server configuration
PORT=5000
FLASK_DEBUG=false
FLASK_ENV=production

# Optional: Database configuration
DB_PATH=gartan_availability.db

# Optional: Docker configuration
# DOCKER_BUILD_TARGET=production
